<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/listdammay"
    tools:context=".Giaodien.MainKhachHang">


    <TextView
        style="@style/appname"

        android:text="Quản lý đặt hàng sản phẩm"/>

    <EditText
        android:hint="Nhập mã khách hàng"
        android:id="@+id/maKH"
        style="@style/txt" />

    <EditText
        android:hint="Nhập tên khách hàng"
        android:id="@+id/tenKH"
        style="@style/txt"/>

    <EditText
        android:hint="Nhập địa chỉ khách hàng"
        android:id="@+id/diachi"
        style="@style/txt" />
    />
    <EditText
        android:hint="Nhập số điện thoại khách hàng"
        android:id="@+id/sdt"
        style="@style/txt" />
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/tieude"
            android:text="Chức Năng ">
        </TextView>
    </LinearLayout>
    <LinearLayout

        style="@style/chucnang">
        <Button
            android:background="@drawable/them"
            android:drawableLeft="@drawable/ic_add"
            android:id="@+id/Them"
            style="@style/btn"
            android:text="@string/them" />
        <Button
            android:background="@drawable/them"
            android:drawableLeft="@drawable/ic_delete"
            android:id="@+id/Xoa"
            style="@style/btn"
            android:text="Xóa" />
        <Button
            android:background="@drawable/thoat"
            android:id="@+id/Sua"
            android:drawableLeft="@drawable/ic_update"
            style="@style/btn"
            android:text="Sửa" />
        <Button
            android:background="@drawable/thoat"
            android:id="@+id/Thoatkh"

            style="@style/btn"
            android:text="Thoát" />

    </LinearLayout>
    <TextView
        style="@style/tieude"
        android:text="Danh Sách Khách Hàng"
        />

    <ListView

        android:id="@+id/lvDSKH"
        style="@style/listView">
    </ListView>


